<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jvnet.poormans-installer</groupId>
  <artifactId>pom</artifactId>
  <version>1.0</version>
  <packaging>pom</packaging>
  
  <name>Poorman's installer</name>
  <url>https://poormans-installer.dev.java.net/</url>
  
  <scm>
    <connection>scm:cvs:pserver:guest@cvs.dev.java.net:/cvs:poormans-installer/poormans-installer</connection>
    <developerConnection>scm:cvs:pserver:${user.name}@cvs.dev.java.net:/cvs:poormans-installer/poormans-installer</developerConnection>
    <url>https://poormans-installer.dev.java.net/source/browse/poormans-installer/poormans-installer</url>
    <tag>pom-1_0</tag>
  </scm>
  
  <repositories>
    <repository>
      <id>central</id>
      <url>http://www.ibiblio.org/maven2</url>
    </repository>
    <repository>
      <id>java.net</id>
      <url>http://download.java.net/maven/1/</url>
      <layout>legacy</layout>
    </repository>
    <repository>
      <id>java.net2</id>
      <url>http://download.java.net/maven/2/</url>
    </repository>
  </repositories>

  <distributionManagement>
    <repository>
      <uniqueVersion>false</uniqueVersion>
      <id>local-repository</id>
      <url>file:${path-to-m2-repo.java.net}</url>
    </repository>
  </distributionManagement>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.2</source>
          <target>1.2</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-idea-plugin</artifactId>
        <configuration>
          <jdkName>JDK1.5</jdkName>
          <downloadSources>true</downloadSources>
        </configuration>
      </plugin>
    </plugins>
  </build>
  
  <modules>
    <module>installer</module>
    <module>installer-builder</module>
  </modules>
</project>
